<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:padding="10dp">

    <ImageView
        android:id="@+id/iv_hot_img"
        android:layout_width="90dp"
        android:layout_height="120dp"
        android:background="@drawable/default_normal"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/iv_hot_img"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_hot_nm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:singleLine="true"
                android:text="你的名字"
                android:textColor="@android:color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_hot_sc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9.4"
                android:textColor="@android:color/holo_orange_light"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分"
                android:textColor="@android:color/holo_orange_light"
                android:textSize="16sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_hot_star"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="80dp"
            android:layout_marginTop="10dp"
            android:lines="2"
            android:text="上白石萌音,佟心竹,神木隆之介"
            android:textColor="#6a6a6a"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_hot_pubDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="80dp"
            android:layout_marginTop="5dp"
            android:singleLine="true"
            android:text="2016-12-02大陆上映"
            android:textColor="#6a6a6a"
            android:textSize="14sp" />

    </LinearLayout>


    <CheckBox
        android:id="@+id/cb_hot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/xiangkan_selector"
        android:button="@null"
        android:drawableLeft="@drawable/xihuan_xin_selector"
        android:drawablePadding="3dp"
        android:gravity="center"
        android:paddingBottom="2dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="2dp"
        android:text="想看"
        android:textColor="@android:color/holo_red_light"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_hot_number"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:gravity="center"
        android:text="1"
        android:textColor="@android:color/white"
        android:textSize="16sp" />


</RelativeLayout>