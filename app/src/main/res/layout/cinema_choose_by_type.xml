<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_choose_addr"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00000000"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_cinema_xuanfuchuang"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#ffccff"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_cinema_quyu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_cinema_quyu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="区域"
                android:textColor="#686868"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/iv_cinema_quyu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/a4k" />

        </LinearLayout>

        <!--分割线-->
        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:background="#686868" />

        <LinearLayout
            android:id="@+id/ll_cinema_zuijin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.4"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_cinema_zuijin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="离我最近"
                android:textColor="#686868"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/iv_cinema_zuijin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/a4k" />

        </LinearLayout>

        <!--分割线-->
        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:background="#686868" />

        <LinearLayout
            android:id="@+id/ll_cinema_pinpai"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_cinema_pinpai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="品牌"
                android:textColor="#686868"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/iv_cinema_pinpai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/a4k" />

        </LinearLayout>

        <!--分割线-->
        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:background="#686868" />


        <LinearLayout
            android:id="@+id/ll_cinema_fuwu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.4"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_cinema_fuwu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="特效/服务"
                android:textColor="#686868"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/iv_cinema_fuwu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/a4k" />

        </LinearLayout>

    </LinearLayout>


    <include
        layout="@layout/cinema_window_quyu"
        android:visibility="gone" />

    <include
        layout="@layout/cinema_window_zuijin"
        android:visibility="gone" />

    <include
        layout="@layout/cinema_window_pinpai"
        android:visibility="gone" />

    <include
        layout="@layout/cinema_window_fuwu"
        android:visibility="gone" />




</LinearLayout>