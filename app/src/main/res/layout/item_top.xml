<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <LinearLayout
            android:id="@+id/ll_f_top10"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_top_icon1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/top01" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"

                android:text="今日TOP10" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_f_kuaixun"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_top_icon2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/top02" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="影视快讯" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_f_zhoubian"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_top_icon3"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/top03" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="周边商城" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_f_piaofang"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_top_icon4"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/top04" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="实时票房" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#f0f0f0"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text="今天" />


</LinearLayout>