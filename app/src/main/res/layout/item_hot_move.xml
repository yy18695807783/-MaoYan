<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_hot_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal"
        android:paddingBottom="8dp"
        android:paddingTop="8dp">

        <RelativeLayout
            android:layout_width="65dp"
            android:layout_height="100dp"
            android:layout_marginLeft="8dp">

            <ImageView
                android:id="@+id/iv_hot_icon"
                android:layout_width="80dp"
                android:layout_height="120dp"
                android:background="@drawable/backgroud_logo02" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/a5b" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="8dp"
            android:paddingRight="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_hot_nm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="神奇动物在哪里"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_hot_3d"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/tv_hot_3d_bg"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="3D"
                    android:textColor="@android:color/white"
                    android:textSize="8sp" />

                <TextView
                    android:id="@+id/tv_hot_ver"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/tv_hot_imax_bg"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="IMAX"
                    android:textColor="#8BB7CE"
                    android:textSize="8sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_hot_guanzhong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="观众"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_hot_guanzhong_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="2dp"
                    android:text="9.0"
                    android:textColor="@android:color/holo_orange_light"
                    android:textSize="16sp" />

                <View
                    android:id="@+id/v_hot_guanzhong"
                    android:layout_width="1dp"
                    android:layout_height="15dp"
                    android:background="@android:color/darker_gray"
                    android:padding="3dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="专业"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="2dp"
                    android:text="6.9"
                    android:textColor="@android:color/holo_orange_light"
                    android:textSize="16sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_hot_scm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="神奇动物成，法师显超能"
                android:textColor="#88000000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_hot_showInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="今天165家影院放映2088场"
                android:textColor="#88000000"
                android:textSize="15sp" />


        </LinearLayout>

        <RelativeLayout
            android:layout_width="60dp"
            android:layout_height="100dp"
            android:gravity="center"
            android:paddingRight="8dp">

            <Button
                android:id="@+id/btn_hot_dinggou"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:background="@drawable/btn_hot_goupiao_selector"
                android:text="购票"
                android:textColor="@drawable/btn_hot_textcolor_goupiao_selector"
                android:textSize="14sp"
                android:visibility="gone" />

            <Button
                android:id="@+id/btn_hot_yuding"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:background="@drawable/btn_hot_selector"
                android:text="预定"
                android:textColor="@drawable/btn_hot_textcolor_selector"
                android:textSize="14sp"
                android:visibility="gone" />

        </RelativeLayout>


    </LinearLayout>


    <RelativeLayout
        android:id="@+id/rl_hot_zhuanti1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="10dp"
            android:background="@android:color/darker_gray" />

        <Button

            android:id="@+id/btn_hot_zhuanti1"
            android:layout_width="35dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_hot_zhuanti_bg"
            android:text="专题"
            android:textColor="@android:color/holo_orange_light"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_hot_zhuanti1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/btn_hot_zhuanti1"
            android:text="麻瓜必备！神奇动物超全资料"
            android:textColor="#88000000"
            android:textSize="16sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_hot_zhuanti2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="10dp"
            android:background="@android:color/darker_gray" />

        <Button
            android:id="@+id/btn_hot_zhuanti2"
            android:layout_width="35dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/btn_hot_zhuanti_bg"
            android:text="专题"
            android:textColor="@android:color/holo_orange_light"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_hot_zhuanti2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/btn_hot_zhuanti2"
            android:text="魔法动物学家纽特·斯卡曼德的前世今生"
            android:textColor="#88000000"
            android:textSize="16sp" />

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#e6e6e6"
        android:padding="2dp" />

</LinearLayout>