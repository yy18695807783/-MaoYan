<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_quan_qiu_jiang"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.yanyin.maoyan.move.QuanQiuJiangActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#D43E37"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_quanqiu_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:src="@drawable/white_arr_left" />


            <TextView
                android:layout_width="1dp"
                android:layout_height="30dp"
                android:background="@android:color/black"
                android:paddingLeft="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:clickable="true"
                android:paddingLeft="15dp"
                android:text="全球电影奖"
                android:textColor="@android:color/white"
                android:textSize="21sp" />

        </LinearLayout>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ll_jiang_type"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/tv_jiang_title"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="#eeeeee"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:text="热门"
                android:textColor="@android:color/black"
                android:textSize="20sp" />


            <GridView
                android:id="@+id/gridview_jiang"
                android:layout_width="match_parent"
                android:layout_height="346dp"
                android:gravity="center"
                android:numColumns="2" />


        </LinearLayout>


    </ScrollView>


</LinearLayout>
