<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_find_cinema"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffccff"
    android:orientation="vertical"
    tools:context="com.yanyin.maoyan.activity.FindCinemaActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/title_bg_color"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="6dp"
        android:weightSum="1">

        <EditText
            android:id="@+id/tv_title_search_cinema"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp"
            android:background="@drawable/search_home_shape"
            android:clickable="true"
            android:drawableLeft="@drawable/icon_search_white"
            android:drawablePadding="10dp"
            android:padding="5dp"
            android:hint="找影院"
            android:textColor="@color/title_search_text"
            android:textCursorDrawable="@drawable/icon_search_white"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_search_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="8dp"
            android:clickable="true"
            android:text="取消"
            android:textColor="@android:color/white"
            android:textSize="19sp" />



    </LinearLayout>

</LinearLayout>
