<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/tv_style4_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="大表姐星爵亲密同框《太空旅客》欧洲首映礼"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <ImageView
            android:scaleType="fitXY"
            android:id="@+id/iv_style4_icon1"
            android:layout_width="0dp"
            android:layout_height="175dp"
            android:layout_marginRight="5dp"
            android:layout_weight="2"
            android:background="@drawable/lh" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="175dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_style4_icon2"
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/lh" />

            <ImageView
                android:id="@+id/iv_style4_icon3"
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:background="@drawable/lh" />


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_style4_nickName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="3dp"
            android:text="猫眼资讯"
            android:textColor="@android:color/darker_gray"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_style4_viewCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:drawableLeft="@drawable/a3j"
            android:drawablePadding="3dp"
            android:text="283"
            android:textColor="@android:color/darker_gray"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_style4_commentCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/a5j"
            android:drawablePadding="3dp"
            android:text="9"
            android:textColor="@android:color/darker_gray"
            android:textSize="13sp" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#e6e6e6" />

</LinearLayout>