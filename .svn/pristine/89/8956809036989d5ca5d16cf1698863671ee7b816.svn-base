<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_hot_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <!--<TextView-->
    <!--android:id="@+id/tv_waite_time"-->
    <!--android:padding="5dp"-->
    <!--android:paddingLeft="5dp"-->
    <!--android:text="12月2日 周五"-->
    <!--android:textColor="@android:color/black"-->
    <!--android:textSize="18sp"-->
    <!--android:background="#f4f4f4"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content" />-->
    <include layout="@layout/layout_sticky_header_view" />

    <LinearLayout
        android:id="@+id/ll_waite_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal"
        android:paddingBottom="8dp"
        android:paddingTop="8dp">

        <RelativeLayout
            android:layout_width="65dp"
            android:layout_height="100dp"
            android:layout_marginLeft="8dp">

            <ImageView
                android:id="@+id/iv_waite_icon"
                android:layout_width="80dp"
                android:layout_height="120dp"
                android:background="@drawable/backgroud_logo02" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/a5b" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="8dp"
            android:paddingRight="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_waite_nm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="你的名字"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_waite_3d"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/tv_hot_3d_bg"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="3D"
                    android:textColor="@android:color/white"
                    android:textSize="8sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_waite_ver"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/tv_hot_imax_bg"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="IMAX"
                    android:textColor="#8BB7CE"
                    android:textSize="8sp"
                    android:visibility="gone" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_waite_xiangkan_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:paddingRight="2dp"
                        android:text="888"
                        android:textColor="@android:color/holo_orange_light"
                        android:textSize="18sp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_waite_xiangkan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/tv_waite_xiangkan_number"
                        android:text="人想看"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="15sp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_waite_zhuanye"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="专业"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_waite_zhuanye_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/tv_waite_zhuanye"
                        android:paddingRight="2dp"
                        android:text="6.9"
                        android:textColor="@android:color/holo_orange_light"
                        android:textSize="18sp" />

                </RelativeLayout>


            </LinearLayout>

            <TextView
                android:id="@+id/tv_waite_scm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="寻君千里行，心系君之名"
                android:textColor="#88000000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_waite_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="主演:上白石萌音,神木隆之介,长泽雅美"
                android:textColor="#88000000"
                android:textSize="15sp" />


        </LinearLayout>

        <RelativeLayout
            android:layout_width="60dp"
            android:layout_height="100dp"
            android:gravity="center"
            android:paddingRight="8dp">


            <Button
                android:id="@+id/btn_waite_yuding"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:background="@drawable/btn_hot_selector"
                android:text="预售"
                android:textColor="@drawable/btn_hot_textcolor_selector"
                android:textSize="14sp" />

        </RelativeLayout>


    </LinearLayout>


    <RelativeLayout
        android:id="@+id/rl_waite_zhuanti1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="10dp"
            android:background="@android:color/darker_gray" />

        <Button

            android:id="@+id/btn_waite_zhuanti1"
            android:layout_width="35dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_hot_zhuanti_bg"
            android:text="专题"
            android:textColor="@android:color/holo_orange_light"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_waite_zhuanti1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/btn_waite_zhuanti1"
            android:text="圣地巡礼：美哭的每一帧都有现实取景地"
            android:textColor="#88000000"
            android:textSize="16sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_waite_zhuanti2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="10dp"
            android:background="@android:color/darker_gray" />

        <Button
            android:id="@+id/btn_waite_zhuanti2"
            android:layout_width="35dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/btn_hot_zhuanti_bg"
            android:text="专题"
            android:textColor="@android:color/holo_orange_light"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_waite_zhuanti2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/btn_waite_zhuanti2"
            android:text="导演新海诚：梦想做宇航员的动画导演"
            android:textColor="#88000000"
            android:textSize="16sp" />

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e6e6e6"
        android:padding="2dp" />


</LinearLayout>